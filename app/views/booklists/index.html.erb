<div class="well">
  <h1 class="text-center">Booklist</h1>
</div>
<div class="container">
  <table class="table table-hover">
    <thead>
      <tr class="row">
        <th class="col-xs-3">Title</th>
        <th class="col-xs-3">Author</th>
        <th class="col-xs-1">ISBN</th>
        <th class="col-xs-1">Genre</th>
        <th class="col-xs-1">Pages</th>
        <th class="col-xs-1">Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @booklists.each do |booklist| %>
        <tr class="row">
          <td class="col-xs-3"><%= link_to booklist.title, booklist %></td>
          <td class="col-xs-3"><%= booklist.author %></td>
          <td class="col-xs-1"><%= booklist.ISBN %></td>
          <td class="col-xs-1"><%= booklist.genre %></td>
          <td class="col-xs-1"><%= booklist.pages %></td>
          <td class="col-xs-1"><%= booklist.year %></td>
          <td class="col-xs-1"><%= link_to 'Edit', edit_booklist_path(booklist), class:"btn btn-warning btn-block btn-xs" %></td>
          <td class="col-xs-1"><%= link_to 'Destroy', booklist, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-block btn-xs" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to 'Add New Book', new_booklist_path, class:"btn btn-block btn-primary" %><br><br>
    </div>
  </div>

  <%= will_paginate @booklists %>
</div>  